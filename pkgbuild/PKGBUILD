# Maintainer: Vilmar Catafesta <vcatafesta@gmail.com>

pkgname="comm-base-config"
pkgdesc="Package configuration BASE"
#depends=('')
#makedepends=('')
#optdepends=('')
#conflicts=('')
#provides=('')
#replaces=('')
pkgver=$(date +%Y%m%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('MIT')
url="https://github.com/communitybig/${pkgname}"
source=("git+${url}.git")
md5sums=('SKIP')

# Automatically detect and use the correct install file
if [ -e "${pkgname}.install" ]; then
  install=${pkgname}.install
elif [ -e "pkgbuild.install" ]; then
  install=pkgbuild.install
fi

package() {
  # Instale todos os arquivos em /usr/share/comm-base-config no momento da criação do pacote:
  install -dm755 "${pkgdir}/usr/share/${pkgname}"

  # Copiar a estrutura de /etc, /usr e /opt para /usr/share/${pkgname}
  local dirs=("usr" "etc" "opt")
  for dir in "${dirs[@]}"; do
    if [ -d "${srcdir}/${pkgname}/${dir}" ]; then
      cp -a "${srcdir}/${pkgname}/${dir}" "${pkgdir}/usr/share/${pkgname}/"
    fi
  done

  # Install license file if present
  if [ -f "LICENSE" ]; then
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  fi

  # Install documentation if present
  if [ -f "README.md" ]; then
    install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
  fi

  # seg 18 nov 2024 00:29:09 -04
  # Add link to bin path
  mkdir "${pkgdir}/usr/bin"
  ln -sf "/usr/share/libalpm/scripts/chili-update-bigapps-category-in-desktopfiles.sh" "${pkgdir}/usr/bin/chili-update-bigapps-category-in-desktopfiles.sh"
}
